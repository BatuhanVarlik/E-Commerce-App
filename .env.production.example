# ================================================
# E-Ticaret Production Environment Variables
# ================================================
# This file is used by docker-compose.production.yml
# Copy this file to .env and fill in your production values
# NEVER commit .env file to git!
# ================================================

# ================================================
# Database Configuration
# ================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=eticaret_db
DB_USER=admin
DB_PASSWORD=your_very_secure_database_password_here

# ================================================
# Redis Configuration
# ================================================
REDIS_PASSWORD=your_secure_redis_password_here

# ================================================
# JWT Configuration
# ================================================
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=your_very_long_and_secure_jwt_secret_key_at_least_64_characters_for_production
JWT_ISSUER=https://api.yourdomain.com
JWT_AUDIENCE=https://yourdomain.com
JWT_DURATION_MINUTES=30

# ================================================
# Iyzico Payment Configuration
# ================================================
IYZICO_API_KEY=your_production_iyzico_api_key
IYZICO_SECRET_KEY=your_production_iyzico_secret_key
IYZICO_BASE_URL=https://api.iyzipay.com

# ================================================
# Google OAuth
# ================================================
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com

# ================================================
# Email Configuration
# ================================================
EMAIL_SMTP_HOST=smtp.yourdomain.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=noreply@yourdomain.com
EMAIL_SMTP_PASSWORD=your_email_password
EMAIL_FROM_EMAIL=noreply@yourdomain.com
EMAIL_FROM_NAME=E-Ticaret

# ================================================
# Frontend Configuration
# ================================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# ================================================
# Backup Configuration (Optional)
# ================================================
S3_BUCKET=your-backup-bucket
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ================================================
# Notification (Optional)
# ================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
