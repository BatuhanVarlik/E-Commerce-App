# ================================================
# E-Ticaret Backend Environment Variables
# ================================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to git!
# ================================================

# ================================================
# Database Configuration (PostgreSQL)
# ================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eticaret_db
DB_USER=admin
DB_PASSWORD=your_secure_database_password

# ================================================
# Redis Configuration
# ================================================
# For production with password: redis-host:6379,password=your_redis_password
REDIS_CONNECTION=localhost:6379

# ================================================
# JWT Configuration
# ================================================
# IMPORTANT: Use a strong, random key (minimum 64 characters for production)
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=your_jwt_secret_key_at_least_64_characters_for_production_security
JWT_ISSUER=ETicaretAPI
JWT_AUDIENCE=ETicaretClient
JWT_DURATION_MINUTES=60

# ================================================
# Iyzico Payment Configuration
# ================================================
# Sandbox: https://sandbox-api.iyzipay.com
# Production: https://api.iyzipay.com
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# ================================================
# Google OAuth Configuration
# ================================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ================================================
# Email/SMTP Configuration
# ================================================
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM_EMAIL=noreply@yourdomain.com
EMAIL_FROM_NAME=E-Ticaret

# ================================================
# Application Settings
# ================================================
ASPNETCORE_ENVIRONMENT=Development

# ================================================
# Production-only settings (uncomment when deploying)
# ================================================
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# HTTPS_REDIRECT=true
# LOG_LEVEL=Warning

