# Redis Configuration
REDIS_CONNECTION=localhost:6379

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_at_least_32_characters_long
JWT_ISSUER=YourAppName
JWT_AUDIENCE=YourAppClient
